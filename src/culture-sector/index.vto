{{ comp.oi.map.zoomable({ config: {
    // Load some GeoJSON
    geojson: {
        key: 'LAD24CD',
        data: geojson.lad.all,
    },

    data: [
        { code: 'E06000047', colour: '#00000011' },
        { code: 'E06000057', colour: '#00000011' },
        { code: 'E08000021', colour: '#00000033' },
        { code: 'E08000022', colour: '#00000011' },
        { code: 'E08000023', colour: '#00000011' },
        { code: 'E08000024', colour: '#00000011' },
        { code: 'E08000037', colour: '#00000011' },
    ],
    key: 'code',

    // Set the boundaries of the map
    bounds: {
        lat: {
            min: 54.93,
            max: 55.09
        },
        lon: {
            min: -1.72,
            max: -1.49,
        },
    },

    // Add some markers
    markers: markers.newcastle_organisations,

} }) }}

{{ set columns = [
    { title: "Organisation", key: "organisation" },
    { title: "Arts Council NPO", key: "NPO" },
    { title: "Arts Council IPSO", key: "IPSO" },
    { title: "NECA Funded", key: "NECA" },
    { title: "National Lottery Project Grant Funded", key: "Project Grant", page: "~/arts-council/project-grants/index.vto" },
] }}
<table>
    <thead>
        <tr>
            {{ for c of columns }}
            <th>
            {{ if c.page }}<a href="{{ c.page |> url }}">{{ /if }}
            {{ c.title }}
            {{ if c.page }}</a>{{ /if }}
            </th>
            {{ /for }}
        </tr>
    </thead>
    <tbody>
        {{ for r of landscape.newcastle_organisations }}
        <tr>
            {{ for i, c of columns }}
            <td {{ if (i != 0) }} style="text-align:center;"{{ /if }}>
            {{ r[c.key] == 'True' ? '&#x2714;' : r[c.key] }}
            </td>
            {{ /for }}
        </tr>
        {{ /for }}
    </tbody>
</table>

