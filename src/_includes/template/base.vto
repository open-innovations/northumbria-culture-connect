<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} &ndash; {{ metas.site }}</title>
    <style>
        /* Put styles inline in _includes/_template/base.vto for the moment */
        html {
            font-family: monospace;
            height: 100%;
        }
        body {
	        margin: 0px;
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }
        body > * {
            flex-grow: 1;
            padding-inline: 1rem;
        }
        body > header {
            flex-grow: 0;
            font-size: 2rem;
            font-weight: 700;
            background: #000000;
            color: #ffffff;
            padding-block: 1em;
            margin-block-end: 2rem;
            & a {
                color: inherit;
            }
        }

        body > footer {
            flex-grow: 0;
            margin-top: 2rem;
            padding: 2rem;
            color: white;
            background: #000000;
            a {
                color: inherit;
            }
        }

        h2 {
            font-size: 1.6rem;
            margin-block-start: 1.5em;
        }
        .holder {
            width: 100%;
            max-width: 100rch;
            margin-inline: auto;
        }
        .oi-zoomable-map { 
            margin-block: 2rem;
        }
        table {
            overflow-x: scroll;
        }

        th {
            background: #000000;
            color: #ffffff;
            padding:0.8em;
            a {
                color: inherit;
            }
        }
        td {
            padding-inline: 1em;
            border-width: thin;
            border-color: #e0dfdf;
            border-style: solid;
        }
    </style>
</head>
<body>
    {{ comp.SiteHeader({ metas, title }) }}
    <div class="holder">
        {{ content }}
    </div>
    {{ comp.SiteFooter() }}
</body>
</html>