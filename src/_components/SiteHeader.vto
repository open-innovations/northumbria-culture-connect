---
css: |
    header { position: relative; background: var(--col-white); color: var(--col-black); }
    .site-header {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1em;
        & a {
            color: inherit;
            color: var(--col-primary-black);
            text-decoration: none;
            &:hover {
                color: inherit;
            }
        }
        /* Because it's a big sea, geddit? */
        & .pacific {
            font-size: 4rem;
        }
    }
---

<header>
	<div class="holder padded site-header">
		<a href="/"><span class="pacific">C</span>ulture <span class="pacific">C</span>onnect</a>
	</div>
	{{ comp.nav.MainMenu({ url }) }}
</header>