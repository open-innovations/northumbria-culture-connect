---
css: |
    .tag {
        display: inline-block;
        color: var(--cta-text, white)!important;
        border-color: var(--cta-border, black)!important;
        background: var(--cta-bg, black)!important;
        border: 1px solid;
        border-radius: 2rem;
        padding-block: 0.2rem;
        padding-inline: 0.7rem;
        transition-property: color, text-decoration;
        transition-duration: 0.3s;
        &:hover {
            color: var(--tag-foreground, white);
            background: var(--tag-background, black);
        }
    }
---
<a class="tag" href="{{ search.page(`tag="${tag}"`).url }}">{{ tag }}</a>